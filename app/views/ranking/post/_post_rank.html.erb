<div class="col-12 col-md-4 mt-3">
  <%= render partial: "ranking/crown", locals: { ranking_number: rank } %>
  <div class="card">
    <% if session_now? %>
      <%= link_to("/posts/#{post.id}") do %>
        <%= image_tag(post.image.to_s, class: "card-img-top") %>
      <% end %>
    <% else%>
      <%= image_tag(post.image.to_s, class: "card-img-top") %>
    <% end %>
    <div class="card-body">
      <p class="card-text">
        <div class="text-left font-weight-bold">
          <%= post.title.truncate(20) %>
        </div>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <% if type == "like_rank" %>

            <% if session_now? %>
              <div id="like_<%= post.id %>" class="h4 m-0">
                <%= render partial: 'likes/like', locals: { post: post } %>
              </div>
            <% else %>
              <div class="h4 m-0">
                <i class="fas fa-heart like-btn text-danger"></i>
                <span class="pl-1"><%= post.likes.count %></span>
              </div>
            <% end %>

          <% elsif type == "comment_rank" %>

            <div class="h4 m-0">
              <i class="far fa-comment"></i>
              <span class="pl-1"><%= post.comments.count %></span>
            </div>

          <% end %>
        </div>
        <small class="text-muted h6 m-0"><%= time_ago_in_words(post.created_at) %>Ââç</small>
      </div>
    </div>
  </div>
</div>