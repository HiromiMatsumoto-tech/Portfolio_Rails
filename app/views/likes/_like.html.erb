<% if Like.find_by(user_id: session_user.id, post_id: post.id) %>
	<%= link_to("/likes/#{post.id}", { class: "text-decoration-none", method: "delete", remote: true }) do %>
		<i class="fas fa-heart like-btn text-danger"></i>
	<% end %>
<% else %>
	<%= link_to("/likes/#{post.id}", { class: "text-decoration-none", method: "post", remote: true }) do %>
		<i class="far fa-heart like-btn text-danger"></i>
	<% end %>
<% end %>
<%= link_to("/posts/#{post.id}/like", { class: "text-dark pl-1" }) do %>
	<%= post.likes.count %>
<% end %>
