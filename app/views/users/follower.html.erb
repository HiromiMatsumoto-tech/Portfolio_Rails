<% provide(:title, " | #{@user.name}さん (@#{@user.username})のフォロワーリスト") %>

<main class="text-center">

	<div class="container mt-5">

		<h1 class="h2 font-weight-normal text-muted mb-5"><%= @user.name %>さんの<br class="d-sm-none">フォロワーリスト</h1>

		<% unless @user.followers.empty? %>
			<% @user.followers.each do |user_follower| %>
				<%= render partial: "common/user_list", locals: { one_user_in_list: user_follower } %>
			<% end %>
		<% else %>
			<div class="row border mx-2">
				<div class="col-12 col-sm-12">
					<div class="h6 my-5">
						フォロワーがいません
					</div>
				</div>
			</div>
		<% end %>

	</div>

</main>
