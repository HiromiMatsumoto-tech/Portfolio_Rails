<% provide(:title, " | #{@user.name}さん (@#{@user.username})のフォローリスト") %>
<main class="text-center" >

	<div class="container mt-5">

		<h1 class="h2 font-weight-normal text-muted mb-5"><%= @user.name %>さんの<br class="d-sm-none">フォローリスト</h1>

		<% unless @user.followings.empty? %>
			<% @user.followings.each do |following| %>
				<div class="row border mx-2 py-3">
					<div class="col-12 col-sm-4 py-3">
						<%= link_to(image_tag(following.icon.to_s, size: "180x180", class: "img-fluid rounded-circle border"), "/#{following.username}") %>
						<div class="pt-3">
							<div id="follow_<%= following.id %>_count">
								<%= render partial: "relationships/count", locals: { user: following } %>
							</div>
						</div>
					</div>
					<div class="col-12 col-sm-5">
						<ul class="list-unstyled pt-4">
							<li class="h1"><%= following.name %></li>
							<li class="h6"><%= link_to("@" + following.username, "/#{following.username}") %></li>
							<% unless following.introduction.nil? %>
								<li class="pt-4 text-left"><%= following.introduction.truncate(75) %></li>
							<% end %>
						</ul>
					</div>
					<div class="col-12 col-sm-3 pt-4">
						<% unless session_user?(following) %>
							<div id="follow_<%= following.id %>">
								<%= render partial: "relationships/relationship", locals: { user: following }  %>
							</div>
						<% end %>
					</div>
				</div>
			<% end %>
		<% else %>
			<div class="row border mx-2">
				<div class="col-12 col-sm-12">
					<div class="h6 my-5">
						フォローしているユーザーがいません
					</div>
				</div>
			</div>
		<% end %>

	</div>

</main>
