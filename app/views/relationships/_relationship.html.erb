<% if session_user.following?(user) %>
	<%= form_for(session_user.relationships.find_by(follow_id: user.id), html: { method: :delete }, remote: true) do |f| %>
		 <%= f.submit "フォロー中", class: "btn btn-lg btn-outline-primary rounded-pill active" %>
	 <% end %>
 <% else %>
	 <%= form_for(session_user.relationships.build, remote: true) do |f| %>
		 <%= hidden_field_tag :follow_id, user.id %>
		 <%= f.submit "フォローする", class: "btn btn-lg btn-outline-primary rounded-pill" %>
	 <% end %>
<% end %>
