<% provide(:title, " | #{@user.name}さん (@#{@user.username})のフォロワーリスト") %>
<main class="text-center" >

	<div class="container mt-5">

		<h1 class="h2 font-weight-normal text-muted mb-5"><%= @user.name %>さんの<br class="d-sm-none">フォロワーリスト</h1>

		<% unless @user.followers.empty? %>
			<% @user.followers.each do |follower| %>
				<div class="row border mx-2 py-3">
					<div class="col-xs-12 col-sm-4 py-3">
						<%= link_to(image_tag(follower.icon.to_s, size: "180x180", class: "img-fluid rounded-circle border"), "/#{follower.username}") %>
						<div class="pt-3">
							<div id="follow_<%= follower.id %>_count">
								<%= render partial: "relationships/count", locals: { user: follower } %>
							</div>
						</div>
					</div>
					<div class="col-xs-12 col-sm-5">
						<ul class="list-unstyled pt-4">
							<li class="h1"><%= follower.name %></li>
							<li class="h6"><%= link_to("@" + follower.username, "/#{follower.username}") %></li>
							<% unless follower.introduction.nil? %>
								<li class="pt-4 text-left"><%= follower.introduction.truncate(75) %></li>
							<% end %>
						</ul>
					</div>
					<div class="col-xs-12 col-sm-3 pt-4">
						<% unless session_user?(follower) %>
							<div id="follow_<%= follower.id %>">
								<%= render partial: "relationships/relationship", locals: { user: follower }  %>
							</div>
						<% end %>
					</div>
				</div>
			<% end %>
		<% else %>
			<div class="row border mx-2">
				<div class="col-xs-12 col-sm-12">
					<div class="h6 my-5">
						フォロワーがいません
					</div>
				</div>
			</div>
		<% end %>

	</div>

</main>
