<% provide(:title, " | ランキング") %>

<main class="text-center">

	<div class="container mt-5">
    
    <h1 class="h2 font-weight-normal text-muted mb-5">ランキング</h1>
    
    <div class="row">
      
      <div class="col-6 col-sm-6 px-4">
        <div class="row text-center alert-primary">
          <div class="col-12 col-sm-12">
            <div class="h5 my-2">
              <i class="far fa-paper-plane pr-2"></i>投稿
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-sm-6 p-0">
            <button class="btn btn-outline-primary btn-block active event" id="rank_show_0" data-rank="0">いいね数</button>
          </div>
          <div class="col-12 col-sm-6 p-0">
            <button class="btn btn-outline-primary btn-block event" id="rank_show_1" data-rank="1">コメント数</button>
          </div>
        </div>
      </div>
      
      <div class="col-6 col-sm-6 px-4">
        <div class="row text-center alert-success border-secondary">
          <div class="col-12 col-sm-12">
            <div class="h5 my-2">
              <i class="far fa-user pr-2"></i>ユーザー
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-sm-6 p-0">
            <button class="btn btn-outline-success btn-block event" id="rank_show_2" data-rank="2">フォロワー数</button>
          </div>
          <div class="col-12 col-sm-6 p-0">
            <button class="btn btn-outline-success btn-block event" id="rank_show_3" data-rank="3">投稿数</button>
          </div>
        </div>
      </div>
      
    </div>
    
    <div id="rank_area_0">
      <%= render partial: "ranking/post/like_rank" %>
    </div>
    
    <div class="d-none" id="rank_area_1">
      <%= render partial: "ranking/post/comment_rank" %>
    </div>
    
    <div class="d-none" id="rank_area_2">
      <%= render partial: "ranking/user/follower_rank" %>
    </div>
    
    <div class="d-none" id="rank_area_3">
      <%= render partial: "ranking/user/posted_rank" %>
    </div>
    
	</div>
  
</main>