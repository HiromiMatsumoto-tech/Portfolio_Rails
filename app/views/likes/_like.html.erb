<% if Like.find_by(user_id: session_user.id, post_id: post.id) %>
	<%= link_to("/likes/#{post.id}/delete", {method: "delete", remote: true}) do %>
		<i class="fas fa-heart like-btn text-danger"></i>
	<% end %>
<% else %>
	<%= link_to("/likes/#{post.id}/create", {method: "post", remote: true}) do %>
		<i class="far fa-heart like-btn text-danger"></i>
	<% end %>
<% end %>
<span class="pl-1"><%= post.likes.count %></span>
